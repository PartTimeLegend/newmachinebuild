{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "gitAuthor": "Renovate Bot <renovate@whitesourcesoftware.com>",
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "configMigration": true
}
